<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Religionsbekenntnis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvreligionsbekenntnis"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tfReligionsbekenntnis"
            android:layout_weight="1"
            android:text="tfReligionsbekenntnis" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Familienstand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvfamilienstand"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tfFamilienstand"
            android:layout_weight="1"
            android:text="tfFamilienstand" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="StaatsangehÃ¶rigkeit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvstaatsangehoerigkeit"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tfStaatsangehoerigkeit"
            android:layout_weight="1"
            android:text="tfStaatsangehoerigkeit" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="ZMR Zahl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvzmrzahl"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tfZMRZahl"
            android:layout_weight="1"
            android:text="tfZMRZahl" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Abbrechen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCancelReligionPage"
            android:layout_weight="1" />

        <Button
            android:text="OK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOKReligionPage"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>