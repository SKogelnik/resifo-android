<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Religion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Religionsbekenntnis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvreligionsbekenntnis"
                android:layout_weight="1"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/tfReligionsbekenntnis"
                android:layout_weight="1"
                android:text="röm. kath."
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Familienstand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvfamilienstand"
                android:layout_weight="1"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/tfFamilienstand"
                android:layout_weight="1"
                android:text="Nix"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Staatsangehörigkeit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvstaatsangehoerigkeit"
                android:layout_weight="1"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/tfStaatsangehoerigkeit"
                android:layout_weight="1"
                android:text="Österreich"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="ZMR Zahl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvzmrzahl"
                android:layout_weight="1"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/tfZMRZahl"
                android:layout_weight="1"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:text="Zurück"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnBack"
            android:layout_weight="1"
            android:onClick="onBack"
            style="@style/btnStyle" />

        <Button
            android:text="Weiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOKReligionPage"
            android:layout_weight="1"
            android:onClick="onNextPage"
            style="@style/btnStyle" />
    </LinearLayout>

</LinearLayout>